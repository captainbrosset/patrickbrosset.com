---
permalink: "articles/{{ date | date: '%Y-%m-%d' }}-{{ title | slug | superSlug }}/index.html"
---

{% include "header-article.njk" %}

<p class="article-illustration">
  <img src="{{ thumbnail }}" alt="{% if altText %}{{ altText }}{% else %}Article thumbnail for illustration only{% endif %}">
</p>

<h1>{{ title }}</h1>

<p class="author-date">
  <a href="/">Patrick Brosset</a>
  -
  <time datetime="{{ date | dateTime }}">{{ date | formattedDateTime }}</time>
</p>

{% if external %}
  {{ excerpt }}
  <p><a href="{{ external }}" rel="external">Read the article at {{ external }}</a></p>
{% else %}
  {{ content | safe }}
{% endif %}

{% include "footer.njk" %}
