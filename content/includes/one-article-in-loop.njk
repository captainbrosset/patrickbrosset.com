<li>
  <h2>
    <a href="{% if post.data.external %}{{ post.data.external }}{% else %}{{ post.url }}{% endif %}"{% if post.data.external %} class="external"{% endif %}>{{ post.data.title }}</a>
  </h2>
  <time datetime="{{ post.date | dateTime }}">{{ post.date | formattedDateTime }}</time>
  <p>{{ post.data.excerpt | safe }}</p>
  <a href="{% if post.data.external %}{{ post.data.external }}{% else %}{{ post.url }}{% endif %}" class="thumbnail">
    <img loading="lazy" width="400" src="{{ post.data.thumbnail }}" alt="{% if post.data.altText %}{{ post.data.altText }}{% else %}Article thumbnail for illustration only{% endif %}">
  </a>
</li>
